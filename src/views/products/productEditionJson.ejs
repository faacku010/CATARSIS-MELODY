<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>productEdition</title>
    <link rel="stylesheet" href="/css/create.css">
</head>
<body>

    <%- include('../partials/header.ejs') %>

    <main>
        <div class="formulario">
            <h1 class>Editar producto</h1>
            <form action="/products/edition/<%= productToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class>
                    <label for="name">Nuevo nombre del producto:</label>
                    <input 
                        class="item-form" 
                        type="text" 
                        name="name" value="<%= productToEdit.name %>">
                </div class>
    
                <div class>
                    <label for="category">Categoría:</label>
                    <br>
                    <select 
                        class="item-form"  
                        name="category">
                    <option value="">Seleccionar categoria</option>  
                    <%
                      let category = ['Viento', 'Percusion', 'Electronico', 'Cuerdas', 'Otro'];
                    %>
                    <% for (const oneCategory of category) { %>
                        <option 
                          value="<%= oneCategory %>" <% locals.oldData &&  (oneCategory === oldData.category) ? 'selected' : null %>> <%= oneCategory%></option>
                    <%  } %>
                    </select>
                  </div>

                <div class>
                    <label for="colors">Nuevos Colores:</label>
                    <input 
                        class="item-form" 
                        type="text" 
                        value="<%= productToEdit.colors %>" 
                        name="colors">
                </div>

                <div class>
                    <label for="price">Precio:</label>
                    <br>
                    <input 
                        class="item-form" 
                        type="number"  
                        name="price" 
                        value="<%= productToEdit.price %>">
                </div>

                <div class>
                    <label for="image">Nuevas Imagenes:</label>
                    <input 
                        class="item-form" 
                        type="file" 
                        name="image" 
                        value="<%= productToEdit.image %>">
                </div>

                <div class>
                    <label for="description">Nueva Descripción:</label>
                    <br>
                    <textarea 
                        id="Description" 
                        name="description"><%= productToEdit.description %></textarea>
                </div>
    
                <button 
                    type="submit" 
                    value="guardar">Guardar
                </button>

            </form>
        </div>
    </main>

    <%- include('../partials/footer') %>


</body>
</html>